<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#FFFFFF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/login_blue</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:windowBackground">@color/bg_dark_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextHintLogin" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ChipViewStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
